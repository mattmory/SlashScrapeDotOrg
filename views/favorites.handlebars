<div class="container-fluid" id="main-container">
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="/">SlashScrapeDotOrg</a>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<a class="nav-link" href="/">Home</a>
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="/favorites">Saved <span class="sr-only">(current)</span></a>
				</li>
			</ul>
			<form class="form-inline my-2 my-lg-0" id="search-form">
				<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
			</form>
		</div>
	</nav>
	<div id="main-story">
		{{#each stories}}
		<div class="story-outer-div">
			<div class="story-link-outer-div" id={{id}}>
				<div class="story-link-inner-div" id={{id}}>
					<a href="{{link}}" target="_blank">{{title}}</a>
				</div>
			</div>
			<div class="story-inner-div" id={{id}}>
				{{preview}}
				<span id="button-span">
					<button class="btn btn-outline-secondary my-2 my-sm-0 unfavorite" id={{id}}>Story Notes</button>
					<button class="btn btn-outline-secondary my-2 my-sm-0 unfavorite" id={{id}}>Unfavorite</button>
					</span>
			</div>
		</div>
		{{/each}}
	</div>
</div>